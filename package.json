{
  "name": "jira-github-linker",
  "displayName": "Jira & GitHub Linker",
  "description": "Turn Jira tickets (ABC-123) and GitHub issues (#456) into clickable links directly in VS Code via Hover and CodeLens.",
  "version": "1.0.0",
  "publisher": "Ankit628792",
  "license": "MIT",
  "author": {
    "name": "Ankit Kumar",
    "username": "Ankit628792",
    "url": "https://ak-portfolio.vercel.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ankit628792/Jira-GitHub-Linker.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Visualization",
    "Other"
  ],
  "icon": "media/jg-linker.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Jira & GitHub Linker",
      "properties": {
        "jiraGithubLinker.jiraBaseUrl": {
          "type": "string",
          "default": "https://company.atlassian.net/browse/",
          "markdownDescription": "Base URL for Jira tickets. **Must end with** `/browse/`. Example: `https://mycompany.atlassian.net/browse/`"
        },
        "jiraGithubLinker.githubRepoUrl": {
          "type": "string",
          "default": "https://github.com/org/repo/",
          "markdownDescription": "Base URL for GitHub repository. **Must end with** `/`. Example: `https://github.com/my-org/my-repo/`"
        },
        "jiraGithubLinker.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Show hover tooltips with links for detected Jira/GitHub references."
        },
        "jiraGithubLinker.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens actions above lines with detected Jira/GitHub references."
        }
      }
    },
    "commands": [
      {
        "command": "jiraGithubLinker.copyUrl",
        "title": "Jira & GitHub Linker: Copy Ticket/Issue URL"
      },
      {
        "command": "jiraGithubLinker.openUrl",
        "title": "Jira & GitHub Linker: Open Ticket/Issue in Browser"
      }
    ],
    "keybindings": [
      {
        "command": "jiraGithubLinker.copyUrl",
        "key": "cmd+k cmd+c",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "jiraGithubLinker.openUrl",
        "key": "cmd+k cmd+o",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p .",
    "watch": "tsc -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}